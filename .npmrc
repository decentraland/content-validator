# Ensure Sharp can install for multiple platforms
# This is needed for CI environments that run on different platforms than development
sharp_binary_host=https://github.com/lovell/sharp-libvips/releases/download/
sharp_libvips_binary_host=https://github.com/lovell/sharp-libvips/releases/download/

# Support installing optional dependencies for all platforms
# This ensures Linux binaries are available even when installing on macOS
optionalDependencies=true
